
<article class="container">
  <div class="show"> 
    <div class="row" data-product-id="<%= @product.id %>">
    <div class="col-sm-9 col-md-9">
    
    <p>
      <%= image_tag(@product.image_url,class: "img-zoom", data_zoom_image: @product.image_url) %>
    </p>

    </div>
    <div class="col-sm-3 col-md-3">
    <p>
      <strong>Name:</strong>
      <%= @product.name %>
    </p>
    
    <p>
     <strong>Description:</strong>
      <%= @product.description %>
    </p>
    
    
    <p>
      <strong>Color:</strong>
      <%= @product.color %>
    </p>
    <p>
      <strong>Price:</strong>
      $ <%= @product.price %>
    </p>

    <p>Average Rating: <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div> 
    </p>

    <!-- <h6>  
      Views:
      <span class="badge">
        <%= @product.views %>
      </span>
    </h6>   -->

    <%= form_with(url: '/payments/create') do |form| %>
      <%= render partial: "shared/stripe_checkout_button" %>
    <% end %>
    <hr>
    <%= render 'new_comment' %>
    
    </div>
    </div>
    <hr>

    <br>

    <%- if @current_user.admin? %>
      <%= link_to 'Edit', edit_product_path(@product) , class: "btn btn-default" %>
    <% else %>
    <% end %>
    
    <%= link_to 'Back', products_path, class: "btn btn-default" %>
  
  </div>   
  
  <br>

  
  <div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>
  <%= render 'comments' %>
  <%= will_paginate @comments, class: 'text-center' %>

  <br>

  
</article>



